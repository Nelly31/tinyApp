<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #428c87";>
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav w-100">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
        <% if (!user) { %>
          <form class="form-inline my-2 my-lg-0 pr-4 flex-shrink-1" style="flex-flow: row" method="GET" action="/login">
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
          <form class="form-inline my-2 my-lg-0 flex-shrink-1" style="flex-flow: row" method="GET" action="/register">
            <button type="submit" margin-right: 5px class="btn btn-secondary">Register</button>
          </form>
          <% } else { %>
            <form class="form-inline my-2 my-lg-0  flex-shrink-1" style="flex-flow: row" name="logout" id="logout" method="POST" action="/logout">
            <a class="nav-item nav-link"><%=user.email%></a>
            <button type="submit" class="btn btn-primary">Logout</button>
            </form> 
          <% } %>
    </div>
  </nav>
</header>